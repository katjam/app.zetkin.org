{
  "version": "0.2.0",
  "configurations": [
    {
        "name": "Next.js: debug client-side (Chrome)",
        "type": "chrome",
        "request": "launch",
        "url": "http://localhost:3000"
    },
    {
        "name": "Next.js: debug client-side (Firefox)",
        "type": "firefox",
        "request": "launch",
        "url": "http://localhost:3000",
        "reAttach": true,
        "pathMappings": [
            {
                "url": "webpack://_n_e",
                "path": "${workspaceFolder}"
            }
        ]
    }
]
}